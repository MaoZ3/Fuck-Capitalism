script/source = "extends CanvasLayer

@export var motomo = preload(\"res://motomami.tscn\")
@onready var progress_bar = $Control/ProgressBar
@onready var color_rect = $ColorRect

signal start_game

func _ready():
	$Control/StartButton/AnimatedSprite2D.play()
	$Control/AudioStreamPlayer.play()


	
func Disminuirvida():
	$ProgressBar.value -= 10

	# Check if progress bar reaches 0 and restart the game if needed
	if $ProgressBar.value <= 0:
		show_game_over()

func _on_est_motocolision():
	print(\"moij\")

func _on_start_timer_timeout():
	$estadoTimer.start()
	
func show_message(text):
	$Control/Mensaje.text = text
	$Control/Mensaje.show()
	$Control/Timer.start() 
	$Control/StartButton/AnimatedSprite2D.play()
	# Disable processing of further mouse clicks until the message is hidden
	set_process_input(false)
	# Start the message timer to hide the message after a delay


func show_game_over():
	# Call the original show_message with \"Game Over\" text
	$Control/StartButton.connect(\"pressed\", Callable(self, \"_on_start_button_pressed\"))
	$Control/Mensaje.text = \"Game Over\"
	$Control/Mensaje.show()
	# Enable processing of mouse clicks
	set_process_input(true)

func _on_start_button_pressed():
	$Control/StartButton/AnimatedSprite2D.play()
	$Control/StartButton.hide()
	$Control/ColorRect.queue_free()
	emit_signal(\"start_game\")
	$Control/StartButton/AudioStreamPlayer.play()


func _on_timer_timeout():
	$Control/Mensaje.hide()
	pass

# This function is called whenever there is an input event.
func _input(event):
	if $ProgressBar.value <= 0:
		if event is InputEventMouseButton:
			if event.button_index == MOUSE_BUTTON_LEFT and event.pressed:
				if $Control/Mensaje.visible:
					_restart_game()

func _restart_game():
	# Reset progress bar value
	$ProgressBar.value = 100  # Adjust the starting value as needed

	# Option 1: Reload the scene (might take longer)
	get_tree().reload_current_scene()
"

